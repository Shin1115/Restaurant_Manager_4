@model IEnumerable<Restaurant_Manager_4.DTO.MonAnDTO>

@{
    ViewBag.Title = "DanhSachMonAn";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string baseurl = Request.Url.Scheme + "://" + Request.Url.Host + ":" + Request.Url.Port + Url.Content("~");
    string idPhanMuc = Request.QueryString["idPhanMuc"];
}

<div class="table-container">
    @foreach (var item in Model)
    {
        <div class="table">
            <img class="ban-image" src="@baseurl@item.hinh_anh" alt="">
            <div class="content">
                <p class="dat-coc-toi-thieu-content">Giá: <span class="font-bold">@item.gia</span></p>
                <h4>@item.ten_mon_an</h4>
                @Html.ActionLink("Đặt món", "ThemMonAn", new { idMonAn = item.id, idPhanMuc = idPhanMuc }, new { @class = "order-button" })
                <a class="order-button">Chi tiết</a>
            </div>
        </div>
    }
</div>

<style>
    .table-container {
        display: flex;
        flex-wrap: wrap;
    }

    .table {
        height: 350px;
        width: 250px;
        position: relative;
        margin-right: 10px;
        margin-bottom: 10px;
    }

    .ban-image {
        position: absolute;
        height: 350px;
        width: 250px;
        object-fit: cover;
    }

    .content {
        width: 100%;
        background-color: black;
        position: absolute;
        padding: 20px;
        top: 55%;
    }

    p, h4, a {
        color: white;
    }

    .order-button {
        display: inline-block;
        margin-top: 10px;
        color: white;
        background-color: #fbb710;
        padding: 10px 20px;
        font-size: 15px;
        border: 1px solid #fbb710;
    }

        .order-button:hover {
            background-color: black;
            color: #fbb710 !important;
            border: 1px solid #fbb710;
            font-size: 15px;
        }

    .dat-coc-toi-thieu-content {
        font-size: 13px;
    }
</style>
