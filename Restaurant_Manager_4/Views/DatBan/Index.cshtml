@model IEnumerable<Restaurant_Manager_4.DTO.BanDTO>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="table-container">
    @foreach (var item in Model)
    {
        <div class="table">
            <img class="ban-image" src="http://localhost:51747/@item.hinh_anh" alt="">
            <div class="content">
                <p class="dat-coc-toi-thieu-content">Đặt cọc tối thiểu <span class="font-bold">@item.dat_coc_toi_thieu</span></p>
                <h4>@item.ten_ban</h4>
                @Html.ActionLink("Đặt bàn", "ThemBan", new { idBan = item.id }, new { @class = "order-button" })
                @Html.ActionLink("Chi tiết", "Details", "BanController", new { id = item.id }, new { @class = "order-button" })
            </div>
        </div>
    }
</div>

<style>
    .table-container {
        display: flex;
        flex-wrap: wrap;
    }

    .table {
        height: 350px;
        width: 250px;
        position: relative;
        margin-right: 10px;
        margin-bottom: 10px;
    }

    .ban-image {
        position: absolute;
        height: 350px;
        width: 250px;
        object-fit: cover;
    }

    .content {
        width: 100%;
        background-color: black;
        position: absolute;
        padding: 20px;
        top: 55%;
    }

    p, h4, a {
        color: white;
    }

    .order-button {
        display: inline-block;
        margin-top: 10px;
        color: white;
        background-color: #fbb710;
        padding: 10px 20px;
        font-size: 15px;
        border: 1px solid #fbb710;
    }

        .order-button:hover {
            background-color: black;
            color: #fbb710 !important;
            border: 1px solid #fbb710;
            font-size: 15px;
        }

        .dat-coc-toi-thieu-content {
            font-size: 13px;
        }
</style>
