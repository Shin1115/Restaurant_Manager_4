@model IEnumerable<Restaurant_Manager_4.DTO.BanDTO>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Tên bàn
        </th>
        <th>
            Chỗ ngồi tối đa
        </th>
        <th>
            Trạng thái
        </th>
        <th>
            Đặt cọc tối thiểu
        </th>
        <th>
            Hình ảnh
        </th>
        <th>
            Mô tả
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ten_ban)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cho_ngoi_toi_da)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.trang_thai)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dat_coc_toi_thieu)
        </td>
        <td>
            <img class="table-image" src="@item.hinh_anh"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.mo_ta)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>

<style>
    .table-image {
        height: 200px;
        width: 200px;
        object-fit: cover;
    }
</style>
