
@model PagedList.IPagedList<Restaurant_Manager_4.Models.mon_an>
@using PagedList;
@using PagedList.Mvc;
@{
    ViewBag.Title = "Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
        <a class="navbar-brand" href="#!">Order Nào !!!</a>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <form class="d-flex">
                <button class="btn btn-outline-dark" type="submit">
                    <i class="bi-cart-fill me-1"></i>
                    Cart
                    <span class="badge bg-dark text-white ms-1 rounded-pill">0</span>
                </button>
            </form>
        </div>
    </div>
</nav>
<!-- Section-->

<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            @foreach (var item in Model)
            {
                <div class="col mb-5">
                    <div class="card h-100">
                        <!-- Product image-->
                        <img class="card-img-top" style="width: 100%;height: 200px;object-fit: cover;" src="@item.hinh_anh" alt="..." />
                        <!-- Product details-->
                        <div class="card-body p-4">
                            <div class="text-center">
                                <!-- Product name-->
                                <h5 class="fw-bolder">@Html.DisplayFor(model => item.ten_mon_an)</h5>
                                <!-- Product price-->
                                <span>Giá:@Html.DisplayFor(model => item.gia)</span>
                            </div>
                        </div>
                        <!-- Product actions-->
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-center">
                                @*<a class="btn btn-outline-dark mt-auto"></a>*@
                                @Html.ActionLink("Add to Cart", "OrderNow", "ShoppingCart", new { id = item.id }, new { @class = "btn btn-outline-dark mt-auto bg-transparent" })
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>


    <div class="clear"></div>
    Page @(Model.PageCount > Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
    <div class="div-pagination">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
    </div>
</section>



